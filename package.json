{
  "name": "@waves/bignumber",
  "version": "0.0.1-a",
  "description": "Waves Library for work with Bignumber in javascript",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/bignumber.umd.min.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wavesplatform/bignumber.git"
  },
  "scripts": {
    "test": "jest",
    "prepare": "tsc -p ./ && rollup -c",
    "postversion": "npm publish",
    "prepublish": "npm run test",
    "postpublish": "git push"
  },
  "keywords": [
    "bignumber",
    "waves"
  ],
  "author": "tsddaniil@gmail.com",
  "license": "MIT",
  "dependencies": {
    "@types/bignumber.js": "^5.0.0",
    "bignumber.js": "^8.1.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/long": "^4.0.0",
    "jest": "^24.8.0",
    "long": "^4.0.0",
    "rollup": "^1.12.3",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-uglify": "^6.0.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/*.+(ts|tsx|js)"
    ]
  }
}
